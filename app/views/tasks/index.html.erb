<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<%= link_to 'New Task', new_task_path, class: "btn btn-primary btn-sm" %>
<%= link_to 'Back Home', root_path, class: "btn btn-secondary btn-sm" %>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Bank</th>
      <th>Project</th>
      <th>Task name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.bank_name %></td>
        <td><%= task.project %></td>
        <td><%= task.task_name %></td>
<!--         <td><%= link_to 'Show', task %></td> -->
        <td><%= link_to 'Edit', edit_task_path(task), :class => "btn btn-success btn-sm" %></td>
        <td><%= link_to 'Destroy', task, :class => "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
