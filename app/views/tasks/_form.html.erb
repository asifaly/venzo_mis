<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable fade show" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :bank %>
    <%= form.collection_select(:bank_id, Bank.all, :id, :name, {}, {:class=>'form-control'}) %>
  </div>

  <div class="form-group">
    <%= form.label :project %>
    <%= form.text_field :project, id: :task_project, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :task_name %>
    <%= form.text_field :task_name, id: :task_task_name, :class => 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-success btn-sm" %>
  </div>
<% end %>
