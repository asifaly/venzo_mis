<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<%= link_to 'New Contact', new_contact_path, class: "btn btn-primary btn-sm" %>
<%= link_to 'Back Home', root_path, class: "btn btn-secondary btn-sm" %>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.role_title %></td>
<!--         <td><%= link_to 'Show', contact %></td> -->
        <td><%= link_to 'Edit', edit_contact_path(contact), :class => "btn btn-success btn-sm" %></td>
        <td><%= link_to 'Destroy', contact, :class => "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


