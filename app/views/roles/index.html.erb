<p id="notice"><%= notice %></p>

<h1>Roles</h1>

<%= link_to 'New Role', new_role_path, class: "btn btn-primary btn-sm" %>
<%= link_to 'Back Home', root_path, class: "btn btn-secondary btn-sm" %>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.title %></td>
<!--         <td><%= link_to 'Show', role %></td> -->
        <td><%= link_to 'Edit', edit_role_path(role), :class => "btn btn-success btn-sm" %></td>
        <td><%= link_to 'Destroy', role, :class => "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

