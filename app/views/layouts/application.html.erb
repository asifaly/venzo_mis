<!DOCTYPE html>
<html>
  <head>
    <title>VenzoMis</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <%= active_link_to 'Venzo MIS', root_path, active: :exclusive, class: "navbar-brand" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav mr-auto">
      <%= active_link_to 'Assignments', assignments_path, class: "nav-item nav-link" %>
      <%= active_link_to 'Tasks', tasks_path, class: "nav-item nav-link" %>
      <%= active_link_to 'Banks', banks_path, class: "nav-item nav-link" %>
      <%= active_link_to 'Activities', activities_path, class: "nav-item nav-link" %>
      <%= active_link_to 'Users', users_path, class: "nav-item nav-link" %>
      <%= active_link_to 'Contacts', contacts_path, class: "nav-item nav-link" %>
      <%= active_link_to 'Roles', roles_path, class: "nav-item nav-link" %>
      <%= active_link_to 'Leaves', leaves_path, class: "nav-item nav-link" %>
      <%= active_link_to 'Bank Contacts', bankcontacts_path, class: "nav-item nav-link" %>
    </div>
    <div class="navbar-nav">
      <% if user_signed_in? %>
        <span class="navbar-text">Logged in as <%= current_user.username %></span>
        <%= active_link_to 'Sign Out', destroy_user_session_path, :method => :delete, class: "nav-item nav-link" %>
      <% else %>
        <%= active_link_to "Login", new_user_session_path, class: "nav-item nav-link" %>
        <%= active_link_to "Register", new_user_registration_path, class: "nav-item nav-link" %>
      <% end %>
    </div>
  </div>
</nav>

    <div class="container">
        <%= yield %>
    </div>
  </body>
</html>
