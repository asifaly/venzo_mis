<p id="notice"><%= notice %></p>

<h1>Banks</h1>

<%= link_to 'New Bank', new_bank_path, class: "btn btn-primary btn-sm" %>
<%= link_to 'Back Home', root_path, class: "btn btn-secondary btn-sm" %>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @banks.each do |bank| %>
      <tr>
        <td><%= bank.name %></td>
<!--         <td><%= link_to 'Show', bank %></td> -->
        <td><%= link_to 'Edit', edit_bank_path(bank), :class => "btn btn-success btn-sm" %></td>
        <td><%= link_to 'Destroy', bank, :class => "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
