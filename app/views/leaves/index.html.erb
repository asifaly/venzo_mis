<p id="notice"><%= notice %></p>

<h1>Leaves</h1>

<%= link_to 'New leave', new_leave_path, class: "btn btn-primary" %>
<%= link_to 'Back Home', root_path, class: "btn btn-secondary" %>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Leavedate</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leaves.each do |leave| %>
      <tr>
        <td><%= leave.leavedate %></td>
        <td><%= leave.user_username %></td>
        <td><%= link_to 'Show', leave %></td>
        <td><%= link_to 'Edit', edit_leave_path(leave) %></td>
        <td><%= link_to 'Destroy', leave, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
