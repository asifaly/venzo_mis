<p id="notice"><%= notice %></p>

<h1>Bankcontacts</h1>

<table>
  <thead>
    <tr>
      <th>Bank</th>
      <th>Contact</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bankcontacts.each do |bankcontact| %>
      <tr>
        <td><%= bankcontact.bank.name %></td>
        <td><%= bankcontact.contact.name %></td>
        <td><%= bankcontact.contact.role.title %></td>
        <td><%= link_to 'Show', bankcontact %></td>
        <td><%= link_to 'Edit', edit_bankcontact_path(bankcontact) %></td>
        <td><%= link_to 'Destroy', bankcontact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

