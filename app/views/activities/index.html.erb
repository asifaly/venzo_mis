<p id="notice"><%= notice %></p>

<h1>Activities</h1>

<%= link_to 'New Activity', new_activity_path , class: "btn btn-primary btn-sm"%>
<%= link_to 'Back Home', root_path, class: "btn btn-secondary btn-sm" %>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
