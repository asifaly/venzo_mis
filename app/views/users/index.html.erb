<p id="notice"><%= notice %></p>

<h1>Users</h1>

<%= link_to 'New User', new_user_registration_path, class: "btn btn-primary" %>
<%= link_to 'Back Home', root_path, class: "btn btn-secondary" %>


<table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'User Assignments', byuser_assignments_path(:userid => user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
